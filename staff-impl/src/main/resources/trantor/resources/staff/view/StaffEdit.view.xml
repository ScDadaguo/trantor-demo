<View title="员工编辑" forModel="staff_Staff" type="Form">
    <Form model="staff_Staff" dataCondition="id = ?" dataParams="[pageContext.record.id]">
        <Fields>
            <Field name="staffName" label="员工名称"/>
            <Field name="position" label="岗位"/>
            <Field name="department" label="部门"/>
            <Field name="mobile" label="手机号"/>
            <Field name="email" label="邮箱"/>
        </Fields>
        <Actions>
        <Action type="Submit" :show="!this.data.id" logicFunction="staff_CreateStaffBuiltInFunc" after="GoBack" layout="Footer"/>
        <Action type="Submit" :show="!!this.data.id" logicFunction="staff_UpdateStaffBuiltInFunc" after="GoBack" layout="Footer"/>
    </Actions>
    </Form>
</View>