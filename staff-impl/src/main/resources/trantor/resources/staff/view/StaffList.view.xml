<View type="List" forModel="staff_Staff" title="员工列表">
    <Table model="staff_Staff" dataCondition="">
        <Search>
            <Fields>
                <Field name="staffName" label="员工名称"/>
                <Field name="staffNumber" label="员工编号"/>
                <Field name="department" label="部门类型"/>
            </Fields>
        </Search>
        <Fields>
            <Field name="staffName" label="员工名称"/>
            <Field name="staffNumber" label="员工编号"/>
            <Field name="position" label="岗位"/>
            <Field name="department" label="部门"/>
            <Field name="mobile" label="手机号"/>
            <Field name="email" label="邮箱"/>
        </Fields>
        <RecordActions label="操作">
            <Action label="详情" targetView="staff_Staff_StaffDetails"/>
            <Action label="编辑" targetView="staff_Staff_StaffEdit"/>
            <Action type="Delete" label="删除" after="Refresh"
                    logicFlow="staff_DelStaffFlow" confirm="确定删除吗？" />
        </RecordActions>
        <Actions>
            <Action label="新建员工" targetView="staff_Staff_StaffCreate"/>
        </Actions>
    </Table>
</View>
