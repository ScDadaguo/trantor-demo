{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "dom",
      "es6"
    ],
    "downlevelIteration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true
  },
  "include": [
    "./types/*",
    "./test/*",
    "./widgets/**/*",
    "./containers/**/*"
  ]
}
